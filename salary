import java.util.Scanner;
class main{
    public static void main(String[]args){
        Scanner sc=new Scanner(System.in);
        int s=sc.nextInt();
        double ans;
       if(s<=10000)
       {
           ans= s+(s*0.2 + s*0.8);
       }
       else if(s<=20000)
       {
           ans=s+(s*0.25 +0.9);
       }
       else
       {
           ans=s+(s*0.3 +0.95);
       }
       System.out.println(ans);
       }
    }
